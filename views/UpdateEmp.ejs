<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Update Employee</title>
   <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

</head>






<body class="min-h-screen flex flex-col">

   <nav class="bg-white shadow-md sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16 items-center">

        <!-- Logo -->
        <a href="/" class="text-xl font-bold text-indigo-600">EMS</a>

        <!-- Menu Links -->
        <div class="hidden md:flex space-x-6">
          <a href="/profile/<%=employee.id %>" class="text-gray-700 hover:text-indigo-600">Home</a>
          <a href="/profile/my-complaints/<%= employee._id %>" class="text-gray-700 hover:text-indigo-600">My Complaints</a>
          <a href="/profile/complaint/<%= employee._id %>" class="text-gray-700 hover:text-indigo-600">Raise Complaint</a>
          <a href="/profile/update/<%= employee._id %>" class="text-green-600 font-semibold hover:text-green-700">Update
            Profile</a>
          <a href="/logout/<%= employee._id %>" class="text-red-600 font-semibold hover:text-red-700">Logout</a>
        </div>

        <!-- Mobile Menu Button -->
        <div class="md:hidden">
          <button id="menuBtn" class="text-gray-700 focus:outline-none">â˜°</button>
        </div>
      </div>
    </div>

    <!-- Mobile Dropdown -->
    <div id="mobileMenu" class="hidden md:hidden flex flex-col px-4 pb-4 space-y-2 bg-gray-50 border-t">
      <a href="/profile/<%=employee.id %>" class="text-gray-700 hover:text-indigo-600">Home</a>
      <a href="/profile/my-complaints/<%= employee._id %>" class="text-gray-700 hover:text-indigo-600">My Complaints</a>
      <a href="/profile/complaint/<%= employee._id %>" class="text-gray-700 hover:text-indigo-600">Raise Complaint</a>
      <a href="/profile/update/<%= employee._id %>" class="text-green-600 font-semibold hover:text-green-800">Update</a>
      <a href="/logout/<%= employee._id %>" class="text-red-600 font-semibold hover:text-red-700">Logout</a>
    </div>
  </nav>

  <main class="w-full bg-gradient-to-br from-pink-200 via-purple-200 to-indigo-300 font-sans flex items-center justify-center">

    
    <div class="w-full max-w-xl bg-white mt-5 rounded-2xl shadow-2xl p-8 border-4 border-blue-300">
      <h2 class="text-3xl font-extrabold text-center text-transparent bg-clip-text bg-gradient-to-r from-pink-500 to-yellow-500 mb-6">Update Details</h2>
      <form action="/profile/update/<%= employee._id %>" enctype="multipart/form-data" method="POST" class="space-y-6">
        
        <!-- Profile Image -->
        <div>
          <label class="block text-lg font-semibold text-purple-700 mb-2">Profile Image</label>
          <input type="file" name="imageUrl" accept="image/*" value="<%=employee.imageUrl %>"
          class="w-full border-2 border-pink-400 p-3 rounded-lg focus:ring-2 focus:ring-yellow-400 bg-yellow-50 hover:bg-yellow-100 transition duration-200"/>
        </div>
        <!-- Username -->
        <div>
          <label class="block text-lg font-semibold text-blue-700 mb-2">Username</label>
          <input type="text" name="username" value="<%= employee.username %>" required
          class="w-full border-2 border-blue-400 p-3 rounded-lg focus:ring-2 focus:ring-green-400 bg-blue-50 hover:bg-blue-100 transition duration-200"/>
        </div>
      <!-- Phone Number -->
      <div>
        <label class="block text-lg font-semibold text-green-700 mb-2">Phone Number</label>
        <input type="tel" name="phone" value="<%= employee.phone %>" 
        pattern="[0-9]{10}" required
        class="w-full border-2 border-green-400 p-3 rounded-lg focus:ring-2 focus:ring-pink-400 bg-green-50 hover:bg-green-100 transition duration-200"/>
      </div>
      <!-- Address -->
      <div>
        <label class="block text-lg font-semibold text-yellow-700 mb-2">Address</label>
        <textarea name="address" rows="3" required
        class="w-full border-2 border-yellow-400 p-3 rounded-lg focus:ring-2 focus:ring-blue-400 bg-yellow-50 hover:bg-yellow-100 transition duration-200"><%= employee.address %></textarea>
      </div>
      <!-- About -->
      <div>
        <label class="block text-lg font-semibold text-blue-700 mb-2">About</label>
        <textarea name="about" rows="3" required
        class="w-full border-2 border-blue-400 p-3 rounded-lg focus:ring-2 focus:ring-blue-400 bg-blue-50 hover:bg-yellow-100 transition duration-200"><%= employee.about %></textarea>
      </div>
      <!-- Submit Button -->
      <div class="flex justify-center">
        <button type="submit"
        class="w-full bg-gradient-to-r from-indigo-500 to-pink-500 text-white py-3 px-6 rounded-xl shadow-md hover:from-indigo-600 hover:to-pink-600 transition duration-300 transform hover:scale-105">
          Update Employee
        </button>
      </div>
    </form>
  </div>
</main>


  <script>
    const menuBtn = document.getElementById('menuBtn');
    const mobileMenu = document.getElementById('mobileMenu');
    menuBtn.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  </script>
</body>
</html>
