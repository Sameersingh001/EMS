<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Employees</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gradient-to-br from-pink-200 via-purple-200 to-indigo-300 font-sans min-h-screen flex flex-col">

  <!-- Navbar -->
  <nav class="bg-white shadow-md sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16 items-center">

        <!-- Logo -->
        <a href="/" class="text-xl font-bold text-indigo-600">EMS</a>

        <!-- Menu Links -->
        <div class="hidden md:flex space-x-6">
          <a href="/profile/<%=IdData.id %>" class="text-gray-700 hover:text-indigo-600">Home</a>
          <a href="/profile/my-complaints/<%= IdData._id %>" class="text-gray-700 hover:text-indigo-600">My Complaints</a>
          <a href="/profile/complaint/<%= IdData._id %>" class="text-gray-700 hover:text-indigo-600">Raise Complaint</a>
          <a href="/profile/update/<%= IdData._id %>" class="text-green-600 font-semibold hover:text-green-700">Update
            Profile</a>
          <a href="/logout/<%= IdData._id %>" class="text-red-600 font-semibold hover:text-red-700">Logout</a>
        </div>

        <!-- Mobile Menu Button -->
        <div class="md:hidden">
          <button id="menuBtn" class="text-gray-700 focus:outline-none">‚ò∞</button>
        </div>
      </div>
    </div>

    <!-- Mobile Dropdown -->
    <div id="mobileMenu" class="hidden md:hidden flex flex-col px-4 pb-4 space-y-2 bg-gray-50 border-t">
      <a href="/profile/<%=IdData.id %>" class="text-gray-700 hover:text-indigo-600">Home</a>
      <a href="/profile/my-complaints/<%= IdData._id %>" class="text-gray-700 hover:text-indigo-600">My Complaints</a>
      <a href="/profile/complaint/<%= IdData._id %>" class="text-gray-700 hover:text-indigo-600">Raise Complaint</a>
      <a href="/profile/update/<%= IdData._id %>" class="text-green-600 font-semibold hover:text-green-800">Update</a>
      <a href="/logout/<%= IdData._id %>" class="text-red-600 font-semibold hover:text-red-700">Logout</a>
    </div>
  </nav>

  <!-- Page Heading -->
  <header class="max-w-7xl mx-auto mt-8 px-6 text-center">
    <h2 class="text-3xl font-bold text-gray-800 mb-2">All Employees</h2>
    <p class="text-gray-600">view all registered employees below.</p>
  </header>

  <form action="/<%=IdData.id %>/emp/Search" method="GET" class=" mt-3 flex items-center justify-center gap-2">
    <input type="text" name="name" placeholder="Search by name" class=" sm:px-10 px-8 py-2 rounded-lg">
    <button type="submit"
      class="bg-green-300 sm:px-10 px-8 py-2 rounded-xl text-white font-bold text-xl hover:bg-blue-500 shadow-2xl">Search</button>
  </form>
  <!-- Employees Grid -->
  <main class="max-w-8xl mx-auto mt-10 px-6 flex-1">

    <% if (!employees || employees.length==0 ) { %>
      <!-- Empty State -->
      <div class="rounded-2xl w-full border border-dashed border-gray-300 bg-white p-10 text-center shadow-sm">
        <div class="mx-auto mb-3 h-14 w-14 rounded-2xl bg-blue-100 grid place-items-center">
          <span class="text-2xl">üóíÔ∏è</span>
        </div>
        <h3 class="text-lg font-semibold text-gray-900">No Employee found üò¢</h3>
      </div>
      <% } %>

    <div class="grid gap-4 sm:grid-cols-1 lg:grid-cols-3 xl:grid-cols-4">
      <% employees.forEach(emp=> { %>
        <div
          class="bg-white shadow-md hover:shadow-2xl rounded-2xl p-6 transition-transform transform hover:-translate-y-2">
          <!-- Employee Image -->
          <div class="flex justify-center">
            <img src="<%= emp.imageUrl || 'https://via.placeholder.com/150' %>" alt="Employee Photo"
              class="w-24 h-24 rounded-full object-cover shadow-lg border-4 border-gray-100">
          </div>

          <!-- Employee Info -->
          <div class="text-center mt-5">
            <h3 class="text-xl font-semibold text-gray-800">
              <%= emp.name %>
            </h3>
            <p class="text-sm text-gray-500 font-medium">
             position : <%= emp.position %> ‚Ä¢ <%= emp.department %>
            </p>
            <p class="text-sm text-gray-600 mt-2 truncate">
             <%= emp.email %>  
              || üìû <%= emp.phone %>
            </p>
          </div>

          <!-- Actions -->
          <div class="mt-6">
            <a href="/employees/<%= emp.id %>">
              <button
                class="w-full px-4 py-2 bg-gradient-to-r from-blue-500 to-blue-600 text-white text-sm font-semibold rounded-xl shadow-md hover:from-blue-600 hover:to-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-400 transition-all duration-300">
                View Profile
              </button>
            </a>
          </div>
        </div>
        <% }) %>
    </div>
  </main>

  <!-- Footer -->
  <footer class="bg-white text-center py-4 mt-10 shadow-inner">
    <p class="text-sm text-gray-500">&copy; <%= new Date().getFullYear() %> Employee Management System</p>
  </footer>



    <script>
    const menuBtn = document.getElementById('menuBtn');
    const mobileMenu = document.getElementById('mobileMenu');
    menuBtn.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  </script>

</body>

</html>