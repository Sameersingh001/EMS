<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= emp.name %> Profile</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    html { scroll-behavior: smooth; }
  </style>
</head>
<body class="bg-gradient-to-br from-pink-200 via-purple-200 to-indigo-300 font-sans min-h-screen">

  <!-- Top Navbar with Actions -->
  <nav class="sticky top-0 z-50 bg-white shadow-md border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16 items-center">

        <!-- Left: Nav Links -->
        <div class="hidden md:flex space-x-8 font-medium text-gray-700">
                  <a href="/" class="text-xl font-bold text-indigo-600">EMS</a>
        </div>

        <!-- Right: Actions -->
        <div class="hidden md:flex space-x-4">
          <a href="#tasks">
            <button class="bg-yellow-500 text-white px-4 py-2 rounded-lg shadow hover:bg-yellow-700 transition">Tasks</button>
          </a>
          <a href="/delete/<%= emp.id %>">
            <button class="bg-red-500 text-white px-4 py-2 rounded-lg shadow hover:bg-red-700 transition">Delete</button>
          </a>
          <a href="/admin">
            <button class="bg-blue-500 text-white px-4 py-2 rounded-lg shadow hover:bg-blue-700 transition">Home</button>
          </a>
          <a href="/admin/update/emp/<%= emp.id %>">
            <button class="bg-green-500 text-white px-4 py-2 rounded-lg shadow hover:bg-green-700 transition">Update</button>
          </a>
        </div>

        <!-- Mobile Menu Button -->
        <div class="md:hidden">
          <button id="menu-toggle" class="text-gray-700 hover:text-indigo-600 focus:outline-none">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
          </button>
        </div>
      </div>
    </div>

    <!-- Mobile Dropdown -->
    <div id="mobile-menu" class="hidden md:hidden px-4 pb-4 space-y-3 bg-white shadow-md">
      <a href="#tasks">
        <button class="w-full bg-yellow-500 text-white py-2 rounded-lg hover:bg-yellow-700">Tasks</button>
      </a>
      <hr class="my-2">
      <a href="/delete/<%= emp.id %>">
        <button class="w-full bg-red-500 text-white py-2 rounded-lg hover:bg-red-700">Delete</button>
      </a>
      <hr class="my-2">
      <a href="/admin">
        <button class="w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-700">Home</button>
      </a>
      <hr class="my-2">
      <a href="/admin/update/emp/<%= emp.id %>">
        <button class="w-full bg-green-500 text-white py-2 rounded-lg hover:bg-green-700">Update</button>
      </a>
    </div>
  </nav>

  <!-- Profile Card -->
  <div id="profile" class="max-w-4xl mx-auto bg-white rounded-2xl shadow-md overflow-hidden mt-8">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row items-center sm:items-start p-8 bg-gradient-to-r from-indigo-600 to-purple-600 text-white">
      <div class="w-32 h-32 rounded-full overflow-hidden border-4 border-white shadow-md">
        <img src="<%= emp.imageUrl %>" alt="Profile Image" class="w-full h-full object-cover">
      </div>
      <div class="mt-4 sm:mt-0 sm:ml-6 text-center sm:text-left">
        <h1 class="text-3xl font-bold"><%= emp.name %></h1>
        <p class="text-gray-200">@<%= emp.username %></p>
        <span class="mt-3 inline-block px-4 py-1 text-sm font-medium rounded-full
          <%= emp.status === 'Active' ? 'bg-green-500 text-white' : 'bg-red-500 text-white' %>">
          <%= emp.status %>
        </span>
      </div>
    </div>

    <!-- Info Grid -->
    <div class="p-8 grid grid-cols-1 sm:grid-cols-2 gap-6">
      <div class="bg-indigo-50 p-4 rounded-xl shadow">
        <h3 class="font-semibold text-indigo-700">Email</h3>
        <p class="text-gray-800 break-words"><%= emp.email %></p>
      </div>
      <div class="bg-blue-50 p-4 rounded-xl shadow">
        <h3 class="font-semibold text-blue-700">Phone</h3>
        <p class="text-gray-800"><%= emp.phone %></p>
      </div>
      <div class="bg-purple-50 p-4 rounded-xl shadow">
        <h3 class="font-semibold text-purple-700">Department</h3>
        <p class="text-gray-800"><%= emp.department %></p>
      </div>
      <div class="bg-pink-50 p-4 rounded-xl shadow">
        <h3 class="font-semibold text-pink-700">Position</h3>
        <p class="text-gray-800"><%= emp.position %></p>
      </div>
      <div class="bg-green-50 p-4 rounded-xl shadow">
        <h3 class="font-semibold text-green-700">Salary</h3>
        <p class="text-gray-800 font-medium">â‚¹ <%= emp.salary.toLocaleString() %></p>
      </div>
      <div class="bg-yellow-50 p-4 rounded-xl shadow">
        <h3 class="font-semibold text-yellow-700">Date of Joining</h3>
        <p class="text-gray-800"><%= emp.dateOfJoining.toDateString() %></p>
      </div>
    </div>

    <!-- About -->
    <div id="about" class="p-6 border-t border-gray-200">
      <h3 class="font-semibold text-indigo-700 mb-2">About</h3>
      <p class="text-gray-700"><%= emp.about %></p>
    </div>

    <!-- Address -->
    <div id="address" class="p-6 border-t border-gray-200">
      <h3 class="font-semibold text-indigo-700 mb-2">Address</h3>
      <p class="text-gray-700"><%= emp.address %></p>
    </div>
  </div>

  <!-- Tasks -->
  <div id="tasks" class="max-w-6xl mx-auto mt-12 bg-white rounded-2xl shadow-md p-8">
      <a href="/admin/task-form/<%=emp.id %>">
          <button class="w-full py-2 px-4 mt-5 bg-green-500 text-white text-sm font-medium rounded-lg hover:bg-green-600 transition duration-200">Give Tasks</button>
      </a>
    <h2 class="text-2xl font-bold text-indigo-700 mb-6">Assigned Tasks</h2>
    <% if (taskData && taskData.length > 0) { %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3 gap-6">
        <% taskData.forEach(task => { %>
          <div class="bg-gray-50 rounded-xl p-6 shadow hover:shadow-lg transition">
            
            <h3 class="text-lg font-semibold text-indigo-700 mb-2"><%= task.title %></h3>
            <p class="text-gray-700 mb-3 break-words line-clamp-8"><%= task.description || "No description provided" %></p>

            <span class="inline-block mb-3 px-3 py-1 text-sm rounded-full
              <% if(task.status === 'Completed'){ %> bg-green-200 text-green-800 
              <% } else if(task.status === 'In Progress'){ %> bg-yellow-200 text-yellow-800 
              <% } else { %> bg-red-200 text-red-800 <% } %>">
              <%= task.status %>
            </span>

            <p class="text-sm text-gray-600">Deadline: <%= task.deadline ? task.deadline.toDateString() : "Not set" %></p>

            <!-- Actions -->
            <div class="flex justify-between items-center mt-4">
              <form action="/task/update/<%= task._id %>" method="POST" class="flex space-x-2">
                <select name="status" class="px-2 py-1 border border-gray-300 rounded-md text-sm">
                  <option value="Pending" <%= task.status === "Pending" ? "selected" : "" %>>Pending</option>
                  <option value="In Progress" <%= task.status === "In Progress" ? "selected" : "" %>>In Progress</option>
                  <option value="Completed" <%= task.status === "Completed" ? "selected" : "" %>>Completed</option>
                </select>
                <button type="submit" class="bg-indigo-600 text-white px-3 py-1 rounded-md text-sm hover:bg-indigo-700">Update</button>
              </form>
              <form action="/task/delete/<%= task._id %>" method="POST">
                <button type="submit" class="text-red-600 hover:underline text-sm">Delete</button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p class="text-gray-600 text-center py-4">No tasks assigned to this employee yet.</p>
    <% } %>
  </div>

  <!-- Toggle Script -->
  <script>
    document.getElementById("menu-toggle").addEventListener("click", () => {
      document.getElementById("mobile-menu").classList.toggle("hidden");
    });
  </script>

</body>
</html>
