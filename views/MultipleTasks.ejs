<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <title>Task Form</title>
</head>

<body class="bg-gradient-to-r from-indigo-100 via-purple-100 to-pink-100 min-h-screen flex items-center justify-center p-4">
  <div class="w-full max-w-4xl bg-white shadow-2xl rounded-3xl p-8 lg:p-12">
    <h2 class="text-3xl font-extrabold text-center text-gray-800 mb-8 tracking-tight">
      ðŸ“‹ Assign New Task
    </h2>

    <form action="/admin/assigned-tasks" method="POST" class="space-y-8">

              <!-- Employee Selection -->
      <div>
        <label class="block text-lg font-bold text-gray-800 mb-4">Select Employees</label>
        <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
          <% if (employees && employees.length > 0) { %>
          <% employees.forEach((emp) => { %>
          <label class="cursor-pointer group">
            <div class="flex items-center gap-4 border rounded-2xl p-5 shadow-md bg-gradient-to-r from-indigo-50 to-purple-50 hover:from-indigo-100 hover:to-purple-100 transition transform hover:-translate-y-1 hover:shadow-xl">
              
              <!-- Checkbox -->
              <input type="checkbox" name="employees" value="<%= emp._id %>"
                class="h-6 w-6 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500">

              <!-- Employee Info -->
              <div>
                <p class="text-xs text-gray-500">ID: <%= emp.id %></p>
                <p class="text-base font-semibold text-gray-800 group-hover:text-indigo-600 transition">
                  <%= emp.name %>
                </p>
                <p class="text-sm text-gray-600"><%= emp.email %></p>
              </div>
            </div>
          </label>
          <% }) %>
          <% } else { %>
          <p class="text-gray-500 col-span-full">No employees found.</p>
          <% } %>
        </div>
      </div>



      <!-- Task Title -->
      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-2">Task Title</label>
        <input type="text" name="title" required
          class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:outline-none shadow-sm transition" />
      </div>

      <!-- Description -->
      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-2">Description</label>
        <textarea name="description" rows="3"
          class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:outline-none shadow-sm transition"></textarea>
      </div>

      <!-- Deadline & Status in Grid -->
      <div class="grid sm:grid-cols-2 gap-6">
        <!-- Deadline -->
        <div>
          <label class="block text-sm font-semibold text-gray-700 mb-2">Deadline</label>
          <input type="date" name="deadline"
            class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:outline-none shadow-sm transition" />
        </div>

        <!-- Status -->
        <div>
          <label class="block text-sm font-semibold text-gray-700 mb-2">Status</label>
          <select name="status"
            class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:outline-none shadow-sm transition">
            <option value="Pending">Pending</option>
            <option value="In Progress">In Progress</option>
            <option value="Completed">Completed</option>
          </select>
        </div>
      </div>


      <!-- Submit -->
      <div class="flex justify-center">
        <button type="submit"
          class="w-full sm:w-auto px-10 py-3 bg-indigo-600 text-white font-semibold rounded-xl shadow-lg hover:bg-indigo-700 hover:shadow-2xl transform hover:-translate-y-1 transition duration-200">
          ðŸš€ Assign Task
        </button>
      </div>
    </form>
  </div>
</body>

</html>
