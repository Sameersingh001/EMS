<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%=data.name %> - Profile</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <style>
   html { scroll-behavior: smooth; }
  </style>
</head>
<body class="bg-gradient-to-br from-pink-200 via-purple-200 to-indigo-300 font-sans min-h-screen">

  <!-- Navbar -->
  <nav class="bg-white shadow-md sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16 items-center">
        
        <!-- Logo -->
        <a href="/" class="text-xl font-bold text-indigo-600">EMS</a>

        <!-- Menu Links -->
        <div class="hidden md:flex space-x-6">
          <a href="/profile/my-complaints/<%=data._id %>" class="text-gray-700 hover:text-indigo-600">My Complaints</a>
          <a href="/allemployees/<%=data._id %>" class="text-gray-700 hover:text-indigo-600">All Employees</a>
          <a href="/profile/complaint/<%= data._id %>" class="text-gray-700 hover:text-indigo-600">Raise Complaint</a>
          <a href="#tasks" class="text-gray-700 hover:text-indigo-600">View Tasks</a>
          <a href="/profile/update/<%= data._id %>" class="text-green-600 font-semibold hover:-green-red-700">Update Profile</a>
          <a href="/logout/<%= data._id %>" class="text-red-600 font-semibold hover:text-red-700">Logout</a>
        </div>

        <!-- Mobile Menu Button -->
        <div class="md:hidden">
          <button id="menuBtn" class="text-gray-700 focus:outline-none">
            ☰
          </button>
        </div>
      </div>  
    </div>

    <!-- Mobile Dropdown -->
    <div id="mobileMenu" class="hidden md:hidden flex flex-col px-4 pb-4 space-y-2 bg-gray-50 border-t">
          <a href="/profile/my-complaints/<%=data._id %>" class="text-gray-700 hover:text-indigo-600">My Complaints</a>
          <a href="/allemployees/<%=data._id %>" class="text-gray-700 hover:text-indigo-600">All Employees</a>
          <a href="/profile/complaint/<%= data._id %>" class="text-gray-700 hover:text-indigo-600">Raise Complaint</a>
          <a href="#tasks" class="text-gray-700 hover:text-indigo-600">Tasks</a>
          <a href="/profile/update/<%= data._id %>" class="text-green-600 font-semibold hover:text-green-800">Update</a>
          <a href="/logout/<%= data._id %>" class="text-red-600 font-semibold hover:text-red-700">Logout</a>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="max-w-7xl mx-auto px-4 py-10 space-y-10">

    <!-- Profile Card -->
    <div class="w-full bg-white rounded-3xl shadow-xl overflow-hidden ring-2 ring-purple-300 ring-opacity-50">

      <!-- Header -->
      <div class="flex flex-col md:flex-row items-center md:items-start md:space-x-6 p-8 bg-gradient-to-r from-indigo-600 to-purple-600 text-white">
        
        <!-- Profile Image -->
        <div class="w-32 h-32 rounded-full bg-white overflow-hidden border-4 border-white shadow-lg">
          <img src="<%= data.imageUrl %>" alt="Avtar" class="w-full h-full object-cover">
        </div>

        <!-- Profile Info -->
        <div class="mt-4 md:mt-0 text-center md:text-left flex-1">
          <h1 class="text-3xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-pink-200 to-white"><%= data.name %></h1>
          <p class="text-gray-200 text-lg">@<%= data.username %></p>
          <span class="inline-block mt-3 px-4 py-1 text-sm font-bold rounded-full shadow-md 
            <%= data.status === 'Active' ? 'bg-green-500 text-white' : 'bg-red-500 text-white' %>">
            <%= data.status %>
          </span>
        </div>
      </div>

      <!-- Body -->
      <div class="p-8 space-y-10" id = "deshboard">

        <!-- Employee Info Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          <div class="bg-indigo-50 p-4 rounded-xl shadow-md">
            <h3 class="font-bold text-indigo-700 mb-1">Email</h3>
            <p class="text-gray-800 break-words"><%= data.email %></p>
          </div>
          <div class="bg-blue-50 p-4 rounded-xl shadow-md">
            <h3 class="font-bold text-blue-700 mb-1">Phone</h3>
            <p class="text-gray-800"><%= data.phone %></p>
          </div>
          <div class="bg-purple-50 p-4 rounded-xl shadow-md">
            <h3 class="font-bold text-purple-700 mb-1">Department</h3>
            <p class="text-gray-800"><%= data.department %></p>
          </div>
          <div class="bg-pink-50 p-4 rounded-xl shadow-md">
            <h3 class="font-bold text-pink-700 mb-1">Position</h3>
            <p class="text-gray-800"><%= data.position %></p>
          </div>
          <div class="bg-green-50 p-4 rounded-xl shadow-md">
            <h3 class="font-bold text-green-700 mb-1">Salary</h3>
            <p class="text-gray-800 font-medium">₹ <%= data.salary.toLocaleString() %></p>
          </div>
          <div class="bg-yellow-50 p-4 rounded-xl shadow-md">
            <h3 class="font-bold text-yellow-700 mb-1">Date of Joining</h3>
            <p class="text-gray-800"><%= data.dateOfJoining.toDateString() %></p>
          </div>
        </div>

        <!-- About -->
        <div class="bg-violet-50 p-6 rounded-xl shadow-md">
          <h3 class="font-bold text-violet-700 mb-2 text-lg">About</h3>
          <p class="text-gray-800 leading-relaxed"><%= data.about %></p>
        </div>

        <!-- Address -->
        <div class="bg-fuchsia-50 p-6 rounded-xl shadow-md">
          <h3 class="font-bold text-fuchsia-700 mb-2 text-lg">Address</h3>
          <p class="text-gray-800 leading-relaxed"><%= data.address %></p>
        </div>
      </div>
    </div>

    <!-- Assigned Tasks -->
    <section id = "tasks">
      <h2 class="text-2xl font-bold text-indigo-800 mb-6">Assigned Tasks</h2>
      <% if (taskData && taskData.length > 0) { %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
          <% taskData.forEach(task => { %>
            <div class="bg-gradient-to-br from-white to-gray-50 shadow-lg rounded-2xl p-6 border border-gray-200 hover:shadow-xl transition">
              
              <!-- Task Title -->
              <h3 class="text-xl font-semibold text-indigo-700 mb-3"><%= task.title %></h3>
              
              <!-- Task Description -->
              <p class="text-gray-700 mb-4 line-clamp-3"><%= task.description || "No description provided" %></p>
              
              <!-- Task Status -->
              <span class="inline-block px-4 py-1.5 text-sm font-medium rounded-full 
                <% if(task.status === 'Completed'){ %> bg-green-200 text-green-800 
                <% } else if(task.status === 'In Progress'){ %> bg-yellow-200 text-yellow-800 
                <% } else { %> bg-red-200 text-red-800 <% } %>">
                <%= task.status %>
              </span>

              <!-- Deadline -->
              <p class="text-sm text-gray-600 mt-3">
                <span class="font-medium text-gray-800">Deadline:</span> <%= task.deadline ? task.deadline.toDateString() : "Not set" %>
              </p>

              <!-- Update Status -->
              <form action="/task/update/<%= task._id %>" method="POST" class="flex space-x-2 items-center mt-4">
                <select name="status" class="px-3 py-1.5 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500">
                  <option value="Pending" <%= task.status === "Pending" ? "selected" : "" %>>Pending</option>
                  <option value="In Progress" <%= task.status === "In Progress" ? "selected" : "" %>>In Progress</option>
                  <option value="Completed" <%= task.status === "Completed" ? "selected" : "" %>>Completed</option>
                </select>
                <button type="submit" class="bg-indigo-600 text-white px-4 py-1.5 rounded-lg text-sm hover:bg-indigo-700 transition">Update</button>
              </form>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <p class="text-gray-700 text-lg font-medium bg-yellow-100 p-4 rounded-lg shadow-md">No tasks assigned yet.</p>
      <% } %>
    </section>

  </main>

  <!-- Mobile Menu Toggle Script -->
  <script>
    const menuBtn = document.getElementById('menuBtn');
    const mobileMenu = document.getElementById('mobileMenu');
    menuBtn.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  </script>

</body>
</html>
