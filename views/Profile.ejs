<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= data.name %> Profile</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gradient-to-br from-pink-300 via-purple-300 to-indigo-400 font-sans min-h-screen flex flex-col items-center justify-center p-4">


    <div class="mt-8 mb-10">
  <h2 class="text-2xl font-bold text-indigo-800 mb-6 tracking-wide">Assigned Tasks</h2>

  <% if (taskData && taskData.length > 0) { %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      <% taskData.forEach(task => { %>
        <div class="bg-gradient-to-br from-white to-gray-50 shadow-lg rounded-2xl p-6 border border-gray-200 hover:shadow-xl hover:scale-105 transition-all duration-300 ease-in-out transform">
          
          <p class="text-sm font-semibold text-indigo-700 mb-3 flex items-center">
            Employee ID: <%= data._id %>
          </p>
          <!-- Title -->
          <h3 class="text-xl font-semibold text-indigo-700 mb-3 flex items-center">
            <span class="mr-2 text-indigo-500"><%= task.title %></span>
          </h3>
          
          <!-- Description -->
          <p class="text-gray-700 mb-4 line-clamp-3"><%= task.description || "No description provided" %></p>

          <!-- Status -->
          <span class="inline-block px-4 py-1.5 text-sm font-medium rounded-full shadow-sm 
            <% if(task.status === 'Completed'){ %> bg-green-200 text-green-800 border border-green-300 
            <% } else if(task.status === 'In Progress'){ %> bg-yellow-200 text-yellow-800 border border-yellow-300 
            <% } else { %> bg-red-200 text-red-800 border border-red-300 <% } %>">
            <%= task.status %>
          </span>

          <!-- Deadline -->
          <p class="text-sm text-gray-600 mt-3 flex items-center">
            <span class="mr-1 font-medium text-gray-800">Deadline:</span> <%= task.deadline ? task.deadline.toDateString() : "Not set" %>
          </p>

          <!-- Actions -->
          <div class="flex justify-between items-center mt-5">
            <!-- Update Status -->
            <form action="/task/update/<%= task._id %>" method="POST" class="flex space-x-3 items-center">
              <select name="status" class="px-3 py-1.5 border border-gray-300 rounded-lg text-sm bg-white focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition">
                <option value="Pending" <%= task.status === "Pending" ? "selected" : "" %>>Pending</option>
                <option value="In Progress" <%= task.status === "In Progress" ? "selected" : "" %>>In Progress</option>
                <option value="Completed" <%= task.status === "Completed" ? "selected" : "" %>>Completed</option>
              </select>
              <button type="submit" class="bg-indigo-600 text-white px-4 py-1.5 rounded-lg text-sm font-medium hover:bg-indigo-700 hover:shadow-md transition">
                Update
              </button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <p class="text-gray-600 text-lg font-medium bg-yellow-100 p-4 rounded-lg shadow-md">No tasks assigned to this employee yet.</p>
  <% } %>
</div>





  <div class="w-full max-w-4xl bg-white rounded-3xl shadow-xl overflow-hidden ring-2 ring-purple-300 ring-opacity-50 transition duration-300 hover:shadow-2xl">
    
    <!-- Header -->
    <div class="flex flex-col sm:flex-row items-center sm:items-start sm:space-x-6 p-8 bg-gradient-to-r from-indigo-600 to-purple-600 text-white">
        
      <div class="w-32 h-32 rounded-full bg-white overflow-hidden border-4 border-white shadow-lg transform transition duration-300 hover:scale-105">
        <img src="<%= data.imageUrl %>" alt="Profile Image" class="w-full h-full object-cover">
      </div>
      <div class="mt-4 sm:mt-0 text-center sm:text-left">
        <h1 class="text-3xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-pink-300 to-white"><%= data.name %></h1>
        <p class="text-gray-200 text-lg">@<%= data.username %></p>
        <span class="inline-block mt-3 px-4 py-1 text-sm font-bold rounded-full shadow-md 
          <%= data.status === 'Active' ? 'bg-green-500 text-white' : 'bg-red-500 text-white' %>">
          <%= data.status %>
        </span>
      </div>
      <a href="/allemployees/<%= data.id%>"><button class="transition transform hover:bg-blue-600  mt-10 hover:scale-105 bg-blue-400 text-2xl h-10 w-64 text-white font-bold rounded-2xl shadow-2xl ">View All Emp</button></a>
    </div>

    

    
    <!-- Body -->
    <div class="p-8 space-y-8">
      <div class="mt-5 flex flex-row items-center justify-between" >
      <a href="/logout/<%= data._id %>"><button class=" transition transform hover:bg-red-600 hover:scale-105 bg-red-400 text-2xl h-10 w-32 text-white font-bold rounded-2xl shadow-2xl ">Logout</button></a>
      <a href="/profile/update/<%= data._id %>"><button class=" transition transform hover:bg-green -600 hover:scale-105 bg-green-400 text-2xl h-10 w-32 text-white font-bold rounded-2xl shadow-2xl ">Update</button></a>
    </div>
      <!-- Grid Info -->
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        <div class="bg-indigo-50 p-4 rounded-xl shadow-md">
          <h3 class="font-bold text-indigo-700 mb-1">Email</h3>
          <p class="text-gray-800 break-words"><%= data.email %></p>
        </div>
        <div class="bg-blue-50 p-4 rounded-xl shadow-md">
          <h3 class="font-bold text-blue-700 mb-1">Phone</h3>
          <p class="text-gray-800"><%= data.phone %></p>
        </div>
        <div class="bg-purple-50 p-4 rounded-xl shadow-md">
          <h3 class="font-bold text-purple-700 mb-1">Department</h3>
          <p class="text-gray-800"><%= data.department %></p>
        </div>
        <div class="bg-pink-50 p-4 rounded-xl shadow-md">
          <h3 class="font-bold text-pink-700 mb-1">Position</h3>
          <p class="text-gray-800"><%= data.position %></p>
        </div>
        <div class="bg-green-50 p-4 rounded-xl shadow-md">
          <h3 class="font-bold text-green-700 mb-1">Salary</h3>
          <p class="text-gray-800 font-medium">â‚¹ <%= data.salary.toLocaleString() %></p>
        </div>
        <div class="bg-yellow-50 p-4 rounded-xl shadow-md">
          <h3 class="font-bold text-yellow-700 mb-1">Date of Joining</h3>
          <p class="text-gray-800"><%= data.dateOfJoining.toDateString() %></p>
        </div>
      </div>

      <!-- About -->
      <div class="bg-violet-50 p-4 rounded-xl shadow-md">
        <h3 class="font-bold text-violet-700 mb-2 text-lg">About</h3>
        <p class="text-gray-800 leading-relaxed"><%= data.about %></p>
      </div>

      <!-- Address -->
      <div class="bg-fuchsia-50 p-4 rounded-xl shadow-md">
        <h3 class="font-bold text-fuchsia-700 mb-2 text-lg">Address</h3>
        <p class="text-gray-800 leading-relaxed"><%= data.address %></p>
      </div>
     
    </div>
  </div>
</body>
</html>
