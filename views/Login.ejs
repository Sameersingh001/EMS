<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>

    <title>Login Page</title>
      <style>
    /* Dark theme color palette with pretty, vibrant accents */
    :root {
      --bg-dark: #1E293B; /* Slate-800 */
      --bg-darker: #0F172A; /* Slate-900 */
      --text-light: #F1F5F9; /* Slate-100 */
      --primary: #818CF8; /* Indigo-400 - Vibrant blue-purple */
      --secondary: #F472B6; /* Pink-400 - Soft pink */
      --accent: #FBBF24; /* Amber-400 - Warm yellow */
      --success: #34D399; /* Emerald-400 - Fresh green */
      --warning: #FB923C; /* Orange-400 - Energetic orange */
    }
  </style>
</head>
<body class="bg-gradient-to-br from-green-300 via-blue-300 to-purple-400 font-sans flex flex-col items-center justify-center p-4">

    <header class="shadow-2xl sticky z-50 w-full rounded-3xl">
    <div class="container mx-auto flex justify-between items-center py-4 px-6">
      <h1 class="text-3xl font-extrabold text-black bg-clip-text bg-gradient-to-r from-var(--primary) to-var(--secondary) animate-fadeIn">EMS</h1>
      <nav class="space-x-4 hidden md:flex">
        <a href="/" class="bg-var(--accent)  text-white font-bold   px-4 py-2 rounded-2xl hover:bg-amber-300 transition transform hover:scale-105">Home</a>
        <a href="/login" class="bg-var(--success) text-white font-bold  px-4 py-2 rounded-2xl hover:bg-emerald-300 transition transform hover:scale-105">Admin Login</a>
        <a href="/login" class="bg-var(--warning) text-white font-bold  px-4 py-2 rounded-2xl hover:bg-orange-300 transition transform hover:scale-105">Employee Login</a>
      </nav>
    </div>
  </header>



  <div class="w-full mt-16   max-w-md bg-white rounded-3xl shadow-xl p-8 md:p-10 overflow-y-auto max-h-screen ring-2 ring-purple-300 ring-opacity-50">
    <h2 class="text-4xl md:text-5xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-green-600 to-purple-600 text-center mb-10 drop-shadow-lg">
      Welcome Back
    </h2>
    <% if (typeof error !== 'undefined') { %>
      <div class="bg-red-100 border-2 border-red-400 text-red-700 px-4 py-3 rounded-xl mb-6 shadow-md">
        <%= error %>
      </div>
    <% } %>
    <form action="/login" method="POST" class="space-y-6">
      <!-- Email -->
      <div>
        <label for="email" class="block text-purple-700 font-bold mb-2 text-lg">Email</label>
        <input type="email" id="email" name="email" required
          class="w-full px-4 py-3 border-2 border-green-300 rounded-xl focus:ring-4 focus:ring-green-400 focus:border-green-500 outline-none shadow-md transition duration-200 bg-green-50">
      </div>

      <!-- Password -->
      <div>
        <label for="password" class="block text-purple-700 font-bold mb-2 text-lg">Password</label>
        <input type="password" id="password" name="password" required
          class="w-full px-4 py-3 border-2 border-red-300 rounded-xl focus:ring-4 focus:ring-red-400 focus:border-red-500 outline-none shadow-md transition duration-200 bg-red-50">
      </div>

      <!-- Submit -->
      <button type="submit"
        class="w-full py-3 rounded-2xl bg-gradient-to-r from-green-500 via-blue-500 to-purple-500 text-white font-bold shadow-xl hover:from-green-600 hover:via-blue-600 hover:to-purple-600 transform hover:scale-105 transition duration-300 ease-in-out hover:shadow-2xl">
        Login
      </button>
    </form>

    <!-- Footer -->
    <div class="text-center mt-8 bg-gradient-to-r from-green-100 to-purple-100 py-4 rounded-xl shadow-lg ring-1 ring-purple-200 ring-opacity-50 transition duration-300 hover:shadow-xl">
      <p class="text-base text-gray-800 font-semibold tracking-wide">
        Donâ€™t have an account? 
        <a href="/register" class="text-purple-600 hover:text-purple-800 font-bold underline decoration-wavy decoration-purple-300 hover:decoration-purple-500 transition duration-300 ease-in-out">Register</a>
      </p>
    </div>
  </div>
    
</body>
</html>
