<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>EMS Login</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    body {
      background: linear-gradient(135deg, #1e293b, #0f172a);
    }
    .glass {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(15px);
      -webkit-backdrop-filter: blur(15px);
      border: 1px solid rgba(255, 255, 255, 0.2);
    }
  </style>
</head>
<body class="min-h-screen flex items-center justify-center p-4">

  <!-- Card -->
  <div class="glass w-full max-w-md p-8 rounded-3xl shadow-2xl text-white">
    <!-- Title -->
    <h2 class="text-4xl font-extrabold text-center mb-8 bg-clip-text text-transparent bg-gradient-to-r from-green-400 to-purple-500">
      Welcome Back 👋
    </h2>

    <% if (typeof error !== 'undefined') { %>
      <div class="bg-red-600 bg-opacity-20 border border-red-400 text-red-300 px-4 py-3 rounded-xl mb-6 shadow-md text-center">
        <%= error %>
      </div>
    <% } %>

    <!-- Form -->
    <form action="/login" method="POST" class="space-y-6">
      <!-- Email -->
      <div class="relative">
        <label for="email" class="block mb-2 font-semibold text-gray-200">Email</label>
        <input type="email" id="email" name="email" required
          class="w-full px-4 py-3 pl-10 bg-transparent border border-gray-400 rounded-xl focus:ring-2 focus:ring-green-400 outline-none placeholder-gray-400 text-white transition duration-300"/>
        <span class="absolute left-3 top-11 text-gray-400">📧</span>
      </div>

      <!-- Password -->
      <div class="relative">
        <label for="password" class="block mb-2 font-semibold text-gray-200">Password</label>
        <input type="password" id="password" name="password" required
          class="w-full px-4 py-3 pl-10 pr-12 bg-transparent border border-gray-400 rounded-xl focus:ring-2 focus:ring-purple-400 outline-none placeholder-gray-400 text-white transition duration-300"/>
        <span class="absolute left-3 top-11 text-gray-400">🔒</span>
        <span id="toggleIcon" onclick="togglePassword()" class="absolute right-4 top-11 cursor-pointer text-gray-400 hover:text-white transition duration-200">👁</span>
      </div>

      <!-- Submit Button -->
      <button type="submit"
        class="w-full py-3 rounded-xl bg-gradient-to-r from-green-500 via-blue-500 to-purple-500 text-white font-bold shadow-lg hover:from-green-600 hover:via-blue-600 hover:to-purple-600 transform hover:scale-105 transition duration-300">
        Login
      </button>
    </form>

    <!-- Footer -->
    <p class="text-center mt-6 text-gray-300">
      Don’t have an account?
      <a href="/register" class="text-purple-400 hover:text-purple-300 font-bold underline">Register</a>
    </p>
  </div>

  <script>
    function togglePassword() {
      const passwordField = document.getElementById("password");
      const toggleIcon = document.getElementById("toggleIcon");

      if (passwordField.type === "password") {
        passwordField.type = "text";
        toggleIcon.textContent = "🙈";
      } else {
        passwordField.type = "password";
        toggleIcon.textContent = "👁";
      }
    }
  </script>
</body>
</html>
