<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>All Tasks</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- Important for mobile -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 p-3 sm:p-6 w-full">

  <!-- Header -->
  <header class="bg-indigo-700 fixed top-0 left-0 w-full z-50 text-white py-3 px-4 sm:px-6 shadow-md">
    <div class="max-w-7xl mx-auto flex justify-between items-center">
      <h1 class="text-base sm:text-2xl font-bold tracking-wide">Admin Dashboard</h1>
      <div class="flex gap-2 sm:gap-5">
        <a href="/admin">
          <button class="px-3 sm:px-4 py-2 bg-blue-500 text-white text-xs sm:text-sm rounded-lg hover:bg-blue-600 transition">Home</button>
        </a>
        <a href="/admin/all-complaints/<%= admin.id %>">
          <button class="px-3 sm:px-4 py-2 bg-blue-500 text-white text-xs sm:text-sm rounded-lg hover:bg-blue-600 transition">Complaints</button>
        </a>
        <a href="/logout/<%= admin.id %>">
          <button class="px-3 sm:px-4 py-2 bg-red-500 text-white text-xs sm:text-sm rounded-lg hover:bg-red-600 transition">Logout</button>
        </a>
      </div>
    </div>
  </header>

  <!-- Page Heading -->
  <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center mt-20 mb-5 gap-3 px-1">
    <h1 class="text-xl sm:text-3xl font-bold text-gray-800">📋 All Tasks</h1>
    <a href="/admin/tasks" class="bg-green-500 hover:bg-green-600 text-white px-3 sm:px-4 py-2 rounded-lg shadow text-sm sm:text-base text-center">
      ➕ Add Task
    </a>
  </div>

  <!-- Desktop Table -->
  <div class="hidden md:block overflow-x-auto">
    <table class="min-w-full bg-white rounded-lg shadow-md">
      <thead>
        <tr class="bg-gray-200 text-left text-sm sm:text-base">
          <th class="py-3 px-4">Emp ID</th>
          <th class="py-3 px-4">Title</th>
          <th class="py-3 px-4">Description</th>
          <th class="py-3 px-4">Status</th>
          <th class="py-3 px-4 text-center">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (tasksData.length === 0) { %>
          <tr>
            <td colspan="5" class="text-center py-6 text-gray-500 text-sm sm:text-base">
              🚫 No tasks available. Click "Add Task" to create one.
            </td>
          </tr>
        <% } else { %>
          <% tasksData.forEach(task => { %>
            <tr class="border-b hover:bg-gray-50 text-sm sm:text-base">
              <td class="py-2 px-4 font-medium text-xs"> 👤 <%= task.assignedTo %></td>
              <td class="py-2 px-4 font-medium"><%= task.title %></td>
              <td class="py-2 px-4 text-xs sm:text-sm"><%= task.description %></td>
              <td class="py-2 px-4">
                <span class="px-2 py-1 rounded-full text-xs sm:text-sm
                  <%= task.status === 'Completed' ? 'bg-green-100 text-green-700' 
                      : task.status === 'In Progress' ? 'bg-yellow-100 text-yellow-700' 
                      : 'bg-red-100 text-red-700' %>">
                  <%= task.status %>
                </span>
              </td>
              <td class="py-2 px-4 text-center flex flex-col sm:flex-row gap-2 justify-center">
                <!-- Update Form -->
                <form action="/task/update/<%= task._id %>" method="POST" class="flex gap-2">
                  <select name="status" class="px-2 py-1 border border-gray-300 rounded-md text-xs sm:text-sm">
                    <option value="Pending" <%= task.status === "Pending" ? "selected" : "" %>>Pending</option>
                    <option value="In Progress" <%= task.status === "In Progress" ? "selected" : "" %>>In Progress</option>
                    <option value="Completed" <%= task.status === "Completed" ? "selected" : "" %>>Completed</option>
                  </select>
                  <button type="submit" class="bg-indigo-600 text-white px-3 py-1 rounded-md text-xs sm:text-sm hover:bg-indigo-700">✒️ Update</button>
                </form>
                <!-- Delete Form -->
                <form action="/task/delete/<%= task._id %>" method="POST">
                  <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded-md text-xs sm:text-sm shadow" onclick="return confirm('Are you sure you want to delete this task?')">☠️ Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>

  <!-- Mobile Card Layout -->
  <div class="grid gap-4 md:hidden">
    <% if (tasksData.length === 0) { %>
      <div class="bg-white p-4 rounded-lg shadow text-center text-gray-500 text-sm">
        🚫 No tasks available. Click "Add Task" to create one.
      </div>
    <% } else { %>
      <% tasksData.forEach(task => { %>
        <div class="bg-white p-4 rounded-lg shadow space-y-3">
          <div class="flex justify-between items-center">
            <h2 class="text-base font-semibold text-gray-800"><%= task.title %></h2>
            <span class="px-2 py-1 rounded-full text-xs
              <%= task.status === 'Completed' ? 'bg-green-100 text-green-700' 
                  : task.status === 'In Progress' ? 'bg-yellow-100 text-yellow-700' 
                  : 'bg-red-100 text-red-700' %>">
              <%= task.status %>
            </span>
          </div>
          <p class="text-gray-600 text-sm"><%= task.description %></p>
          <p class="text-xs text-gray-500">👤 <%= task.assignedTo %></p>

          <!-- Actions -->
          <div class="flex flex-col gap-2">
            <form action="/task/update/<%= task._id %>" method="POST" class="flex gap-2">
              <select name="status" class="flex-1 px-2 py-1 border border-gray-300 rounded-md text-xs">
                <option value="Pending" <%= task.status === "Pending" ? "selected" : "" %>>Pending</option>
                <option value="In Progress" <%= task.status === "In Progress" ? "selected" : "" %>>In Progress</option>
                <option value="Completed" <%= task.status === "Completed" ? "selected" : "" %>>Completed</option>
              </select>
              <button type="submit" class="bg-indigo-600 text-white px-3 py-1 rounded-md text-xs hover:bg-indigo-700">✒️</button>
            </form>
            <form action="/task/delete/<%= task._id %>" method="POST">
              <button type="submit" class="w-full bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded-md text-xs shadow" onclick="return confirm('Are you sure you want to delete this task?')">☠️ Delete</button>
            </form>
          </div>
        </div>
      <% }) %>
    <% } %>
  </div>

</body>
</html>
